              -#         -if field[:required] == true
              -#           %input.form-control.input(type="text" name="#{field[:name]}" placeholder="#{field[:placeHolder]}" required)/
              -#         -else 
              -#           %input.form-control.input(type="text" name="#{field[:name]}" placeholder="#{field[:placeHolder]}")/
              -#       / END OF #{field[:placeHolder]}
              -#     -if addMessageField == true
              -#       /Message
              -#       .form-group
              -#         %textarea.form-control.text-area(name="message" cols="80" rows="2" type="text" placeHolder="Message")
              -#       /END OF Message
              -#     / Submit Btn
              -#     .btn-container.form-group
              -#       %button.btn.btn-general(name="submit" type="submit" data-disable-with="<i class='fas fa-spinner fa-spin'></i>")#{formBTN}
              -#     / END OF Submit Btn
      %section.testimonials#testimonials-section
        .overlay
        .container
          .row
            .col-12.col-lg-10.offset-lg-1.col-xl-8.offset-xl-2
              .owl-carousel#testimonials
                -@testimonials.each_with_index do |testimonial, index|
                  / #{testimonial[:name]}
                  .item
                    .testimonial-content
                      %img.img-fluid(src="img/testimonial-picture-#{index}.png" alt="#{testimonial[:name]}")/
                      %span.name #{testimonial[:name]}
                      %p.quote "#{testimonial[:quote]}"

    %footer
      .footer-top
        .container
          .row
            .col-12.col-md-3
              %p.link-container
                %a.logo-container(href="/" title="#{companyName}")
                  %img.img-fluid(src="img/logo-footer.png" alt="#{companyName} Logo")/
            .col-12.col-md-9
              .navigation
                %ul.footer-nav
                  %li
                    %a.nav-link(href="/" title="Home")Home
                  %li
                    %a.nav-link(href="#contact" title="Contact Us")Contact Us
                  %li
                    %a.nav-link(href="#services" title="Services")Services
                  %li
                    %a.nav-link(href="#testimonials-section" title="Testimonials")Testimonials
      .footer-middle
        .container
          .row
            .col-12
              .footer-social
                %ul.social-list
                  - if addFacebook == true
                    %li
                      %a.social-link(href="#{facebookLink}" title="Facebook" target="_blank")
                        %i.fab.fa-facebook-f
                  - if addTwitter == true
                    %li
