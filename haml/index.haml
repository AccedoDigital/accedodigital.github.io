%html{:lang => "en"}
  %head

    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    / Required meta tags
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/

    %title #{companyName} - #{businessTurn}
    %meta{:name => "description", :content => "#{description}"}
    %link{:rel => "icon", :href => "img/favicon.png"}/

    / Bootstrap CSS
    %link{:crossorigin => "anonymous", :href => "https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css", :integrity => "sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh", :rel => "stylesheet"}/
    
    / Owl Carousel
    %link(rel="stylesheet" href="css/owl.carousel.min.css")/

    / Basic CSS by Accedo Digital
    %link{:href => "css/main.css", :rel => "stylesheet"}/
    
    / HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>

  %body
    %header#back-top
      .container.header-container

        %nav.navbar.navbar-expand-md
          /Logo
          %a(title="#{companyName}" href="/")
            %img.navbar-brand(src="img/logo.png" alt="#{companyName} Logo")/
          /END OF Logo

          /Social Media Desktop
          .desktop-social.d-none.d-md-flex
            - if addFacebook == true
              %a.social-link(href="#{facebookLink}" title="Facebook" target="_blank")
                %i.fab.fa-facebook-f
            - if addTwitter == true
              %a.social-link(href="#{twitterLink}" title="Twitter" target="_blank")
                %i.fab.fa-twitter
            - if addInstagram == true
              %a.social-link(href="#{instagramLink}" title="Instagram" target="_blank")
                %i.fab.fa-instagram
            - if addLinkedin == true
              %a.social-link(href="#{linkedinLink}" title="LinkedIn" target="_blank")
                %i.fab.fa-linkedin-in
            - if addYelp == true
              %a.social-link(href="#{yelpLink}" title="Yelp" target="_blank")
                %i.fab.fa-yelp
          /END OF Social Media Desktop

          /Phone Number
          %a.phone-number.d-none.d-md-flex(title="#{phoneNumber}" href="tel:#{phoneNumberFormated}")#{phoneNumber}
          /END OF Phone Number

          /Hamburguer
          %button.navbar-toggler.collapsed( type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation")
            %span.sr-only Menu
            %span.icon-bar.top
            %span.icon-bar.middle
            %span.icon-bar.bottom
          /END OF Hamburguer
          
          /Navbar Content
          .collapse.navbar-collapse#navbarContent
            %ul.navbar-nav.mr-auto
              %li.nav-item.active
                %a.nav-link(href="/" title="Home")Home
              %li.nav-item
                %a.nav-link(href="#contact" title="Contact Us")Contact Us
              %li.nav-item
                %a.nav-link(href="#services" title="Services")Services
              %li.nav-item
                %a.nav-link(href="#testimonials-section" title="Testimonials")Testimonials
              /Navigation btn
              %li.action-item
                %a.btn-general.btn-action.local-scroll(href="#{actionUrl}" title="#{actionText}")
                  %img(src="img/action-icon.png" alt="#{actionText} Icon")/
                  %span #{actionText}
              /END OF Navigation btn
              /Social media mobile
              %li.mobile-social.d-md-none
                - if addFacebook == true
                  %a.social-link(href="#{facebookLink}" title="Facebook")
                    %i.fab.fa-facebook-f
                - if addTwitter == true
                  %a.social-link(href="#{twitterLink}" title="Twitter")
                    %i.fab.fa-twitter
                - if addInstagram == true
                  %a.social-link(href="#{instagramLink}" title="Instagram")
                    %i.fab.fa-instagram
                - if addLinkedin == true
                  %a.social-link(href="#{linkedinLink}" title="LinkedIn")
                    %i.fab.fa-linkedin-in
                - if addYelp == true
                  %a.social-link(href="#{yelpLink}" title="Yelp")
                    %i.fab.fa-yelp
              /END OF Social media mobile
          /END OF Navbar Content

    .wrap-content
      .banner
        .tagline-container
          .container
            .row
              .col-12
                %h1.tagline #{tagline}
              .col-12
                .tagline-btn-container
                  %a.btn-general.btn-tagline.transparent.local-scroll(href="#info-contact" title="More Info")More Info
                  %a.btn-general.btn-tagline.local-scroll(href="#{actionUrl}" title="#{actionText}")#{actionText}
        %a.scroll-link.local-scroll.d-none.d-md-flex(href="#info-contact" title="Scroll Down")
          %img(src="img/mouse.png" alt="Scroll Down")/  
      
      %section#info-contact
        .container-fluid
          .row
            .col-12
              .info-container
                .info-item
                  %img.info-icon.img-fluid(src="img/info-icon-phone.png" alt="Phone Icon")/
                  .info-description
                    %span.info-title Call Us Now
                    %a.info-content(href="tel:#{phoneNumberFormated}" title="Call to #{phoneNumber}")#{phoneNumber}
                .info-item
                  %img.info-icon.img-fluid(src="img/info-icon-mail.png" alt="Email Icon")/
                  .info-description
                    %span.info-title Email adress
                    %a.info-content(href="mailto:#{mailDirection}" title="Mail to #{mailDirection}")#{mailDirection}
                .info-item
                  %img.info-icon.img-fluid(src="img/info-icon-clock.png" alt="Clock Icon")/
                  .info-description
                    %span.info-title Working Hours
                    %span.info-content #{schedule}

      %section.contact-services
        .container
          .row
            .col-12.col-md-6.col-lg-5.col-xl-4
              #services
                %h2.experience-title
                  %span.quantity(data-fundation= "#{yearFundation}")
                  .years-text
                    %span.years Years
                    %span.experience Experience
                %p.experience-content
                  We have been serving in the area of
                  -@areas.each do |area|
                    -if area == @areas.last 
                      and #{area}
                    - else
                      #{area},
                  since #{yearFundation}. Among the services we offer are the following:
                .services-container
                  -@services.each_with_index do |service, index|
                    .service-item
                      .icon-container
                        %img(src="img/service-icon-#{index}.png" alt="#{service}" class="img-fluid")/
                      %span.service-title #{service}

            .col-12.col-md-6.col-lg-7.col-xl-8
