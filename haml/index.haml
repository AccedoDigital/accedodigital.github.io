              -#   %img.img-fluid.d-none.d-xl-block(src="img/side.jpg" alt="About #{companyName} - #{actionText}")/
              -#   %form#contactForm(action="mailto:#{mailDirection}?subject=Form_Submition" method="post" enctype="text/plain")
              -#     %h2.form-title #{formTitle}

              -#     -@fields.each do |field|
              -#       / #{field[:placeHolder]}
